<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호 찾기"
                android:textColor="#291f1f"
                android:textSize="35dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/findpw_id"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:hint="아이디"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:textColor="#442c05"
                    android:textColorHint="@android:color/darker_gray" />

                <Button
                    android:id="@+id/checkid"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:background="#291f1f"
                    android:text="아이디확인"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

                <EditText
                    android:id="@+id/findpw_email"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
                    android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                    android:hint="이메일"
                    android:singleLine="true"
                    android:padding="10dp"
                    android:textColor="#442c05"
                    android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="※ 회원가입 시 등록한 이메일을 입력해야만 인증번호를 받을 수 있습니다."
                android:layout_marginTop="20dp"
                android:layout_margin="30dp"
                android:textColor="@android:color/holo_red_light"
                android:textStyle="bold"
                android:textSize="13dp"/>

                <Button
                    android:id="@+id/pw_sendcode"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="#291f1f"
                    android:text="인증받기"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
